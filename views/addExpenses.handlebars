{{!-- !HERO --}}
<div class="hero min-h-screen bg-base-200 w-full">
  <div class="hero-content text-center">
    <div class="max-w-md">
      <h1 class="text-5xl font-bold">Hello {{user}}</h1>
      <p class="py-6">In order for you to start your expense tracking journey click the button below .</p>
      <a href="#next">
      <button class="btn btn-primary">Get Started</button>
      </a>
    </div>
  </div>
</div>
{{!-- !another section where I can Enter expenses and select the type of expenses using dropdown --}}
<div class="container mx-auto h-screen" id="next">
  <div class="flex justify-center pt-14">
    <div class="w-1/2">
      <form action="" method="POST">
        <div class="mb-4">
          <label for="expense" class="sr-only">Expense</label>
          <input
            type="text"
            name="expense"
            id="expense"
            placeholder="Enter Expense"
            class="bg-gray-100 border-2 w-full p-4 rounded-lg"
          />
        </div>
        {{!-- input for price In South African Rands --}}
        <div class="mb-4">
          <label for="price" class="sr-only">Price</label>
          <input
            type="text"
            name="price"
            id="price"
            placeholder="Enter Price In Rands"
            class="bg-gray-100 border-2 w-full p-4 rounded-lg"
          />
        </div>
        <div class="mb-4">
          <label for="type" class="sr-only">Type</label>
          <select
            name="typeofexpense"
            id="type"
            class="bg-gray-100 border-2 w-full p-4 rounded-lg"
          >
          {{!-- default option "Select Expense Type" --}}
            <option value="Select Expense Type">Select Expense Type</option>
            <option value="food">Food</option>
            <option value="transport">Transport</option>
            <option value="entertainment">Entertainment</option>
            <option value="other">Other</option>
          </select>
        </div>
        <div>
          <button
            type="submit"
            class="bg-blue-500 text-white px-4 py-3 rounded font-medium w-full">
            Add Expense
          </button>
          {{!-- button to view expenses --}}
          <button
            type="submit"
            class="bg-blue-500 text-white px-4 py-3 mt-8 rounded font-medium w-full"
            >
            View Expenses
            </button>
        </div>
      </form>
    </div>
  </div>
  <h1 class="text-1xl font-bold text-gray-500 text-center mt-3 pb-3">Your Expenses By Percentage</h1>
  <div class="mx-auto flex flex-col items-center md:justify-center mt-7 gap-x-10 md:flex-row lg:flex-row">
    {{!-- heading --}}
    
            <div class="">
                <div class="radial-progress" style="--value:{{foodPercentage}};">{{foodPercentage}}%</div>
                <p class="text-center">Food</p>
            </div>
            <div>
                <div class="radial-progress" style="--value:{{transportPercentage}};">{{transportPercentage}}%</div>
                <p class="text-center">Transport</p>
            </div>
            <div>
                <div class="radial-progress" style="--value:{{entertainmentPercentage}};">{{entertainmentPercentage}}%</div>
                <p class="text-center">Entertainment</p>
            </div>
            <div>
                <div class="radial-progress" style="--value:{{otherPercentage}};">{{otherPercentage}}%</div>
                <p class="text-center">Other</p>
            </div>
 </div>
</div>
  
