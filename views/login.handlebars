{{!-- !LOGIN SECTION --}}
<section class="h-full gradient-form bg-gray-200 md:h-screen">
  <div class="container py-12 px-6 h-full">
    <div class="flex justify-center items-center flex-wrap h-full g-6 text-gray-800">
      <div class="xl:w-10/12">
        <div class="block bg-white shadow-lg rounded-lg">
          <div class="xl:flex xl:flex-wrap g-0">
            <div class="xl:w-6/12 px-4 md:px-0">
              <div class="md:p-12 md:mx-6">
                <div class="text-center">
                  <img
                    class="mx-auto w-48"
                    src="/mytranlog.png"
                    alt="logo"
                  />
                </div>
                <form action="/login" method="post" >
                  <p class="mb-4 text-center text-lg font-bold">Please login to your account</p>
                  <div class="text-red-500 text-center mt-2 font-bold">
            {{#if messages.error}}
            <p class="error">{{messages.error}}</p>
            {{/if}}
          </div>
                  {{!-- input for email --}}
                    <div class="mb-4">
                        <label class="block mb-2 text-sm text-gray-600" for="email">Email</label>
                        <input
                        class="w-full px-4 py-2 border rounded-lg text-gray-700 focus:outline-none focus:border-green-500"
                        type="email"
                        name="email"
                        id="email"
                        placeholder="Enter your email"
                        value="{{theMail}}"
                        required autocomplete="off"/>
                    </div>
                  {{!-- input for unique code --}}
                    <div class="mb-4">
                        <label class="block mb-2 text-sm text-gray-600" for="uniqueCode">Unique Code</label>
                        <input
                        class="w-full px-4 py-2 border rounded-lg text-gray-700 focus:outline-none focus:border-green-500"
                        type="password"
                        name="uniqueCode"
                        id="uniqueCode"
                        placeholder="Enter your unique code"
                        value="{{theCode}}"
                        required  autocomplete="off"/>
                    </div>
                  <div class="text-center pt-1 mb-12 pb-1">
                    <a href="/addexpenses">
                    <button
                      class="inline-block px-6 py-2.5 text-white font-medium text-xs leading-tight uppercase rounded shadow-md hover:bg-blue-700 hover:shadow-lg focus:shadow-lg focus:outline-none focus:ring-0 active:shadow-lg transition duration-150 ease-in-out w-full mb-3"
                      type="submit"
                      data-mdb-ripple="true"
                      data-mdb-ripple-color="light"
                      style="
                        background: linear-gradient(
                          to right,
                          #ee7724,
                          #d8363a,
                          #dd3675,
                          #b44593
                        );
                      "
                    >
                      Log in
                    </button>
                    </a>
                      {{#if messages.theId}}
                          <div class="p-4 mb-4 text-sm text-blue-700 bg-blue-100 rounded-lg dark:bg-blue-200 dark:text-blue-800 flex flex-row justify-between" role="alert">
                              <p id="decode">Here is your unique code <span class="font-bold">{{messages.theId}}</span> Please Copy It</p>
                              <!--                    copy to clipboard icon-->
                              <button class="btn btn-ghost btn-circle copyButton" type="button" data-clipboard-text="{{messages.theId}}">
                                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                                      <path stroke-linecap="round" stroke-linejoin="round" d="M15.666 3.888A2.25 2.25 0 0013.5 2.25h-3c-1.03 0-1.9.693-2.166 1.638m7.332 0c.055.194.084.4.084.612v0a.75.75 0 01-.75.75H9a.75.75 0 01-.75-.75v0c0-.212.03-.418.084-.612m7.332 0c.646.049 1.288.11 1.927.184 1.1.128 1.907 1.077 1.907 2.185V19.5a2.25 2.25 0 01-2.25 2.25H6.75A2.25 2.25 0 014.5 19.5V6.257c0-1.108.806-2.057 1.907-2.185a48.208 48.208 0 011.927-.184" />
                                  </svg>
                              </button>
                          </div>
                      {{/if}}
                    <a class="text-gray-500" href="#!">Forgot your unique code</a>
                  </div>
                  <div class="flex items-center justify-between pb-6 text-center">
                    <a href="/signup">
                    <p class="mb-0 mr-2 ">Don't have an account? Sign Up</p>
                    </a>
                  </div>
                </form>
              </div>
            </div>
            <div
              class="xl:w-6/12 flex items-center lg:rounded-r-lg rounded-b-lg lg:rounded-bl-none"
              style="
                background: linear-gradient(to right, #ee7724, #d8363a, #dd3675, #b44593);
              "
            >
              <div class="text-white px-4 py-6 md:p-12 md:mx-6">
                <h4 class="text-xl font-semibold mb-6">This is more than a expense tracker</h4>
                <p class="text-sm">
                 The best thing about having a expense tracker is being able to spend money on what you want! maybe you're thinking, "Hey, I'm going to make some extra cash off my hobby." In any case, if you're looking for a way to track how much you spend on your on your daily expenses you've come to the right place.
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
